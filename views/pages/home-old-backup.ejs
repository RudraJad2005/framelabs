    <script>
        // Split Screen Reveal on Scroll
        const heroWrapper = document.querySelector('.hero-wrapper');
        const splitLeft = document.getElementById('splitLeft');
        const splitRight = document.getElementById('splitRight');
        const centerLine = document.getElementById('centerLine');
        const scrollHint = document.getElementById('scrollHint');

        function updateSplit() {
            const rect = heroWrapper.getBoundingClientRect();
            const scrollProgress = Math.min(1, Math.max(0, -rect.top / (rect.height - window.innerHeight)));
            
            // Move panels apart
            const offset = scrollProgress * 100;
            splitLeft.style.transform = `translateX(-${offset}%)`;
            splitRight.style.transform = `translateX(${offset}%)`;
            
            // Fade center line
            centerLine.style.opacity = 1 - scrollProgress;
            
            // Hide scroll hint
            scrollHint.style.opacity = 1 - (scrollProgress * 3);
        }

        window.addEventListener('scroll', updateSplit);
        updateSplit();
    </script>

