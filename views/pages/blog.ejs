<style>
    /* Navbar Styles */
    #navbar {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        z-index: 10000 !important;
        background: rgba(250, 250, 250, 0.95) !important;
        backdrop-filter: blur(10px) !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08) !important;
    }

    #navbar .logo-text,
    #navbar .nav-links a,
    #navbar .nav-login {
        color: #1a1a1a !important;
    }

    #navbar .logo-frame {
        border-color: #1a1a1a !important;
    }

    #navbar .nav-cta {
        background: #1a1a1a !important;
        color: #fff !important;
    }

    body {
        background: #fafafa;
        padding-top: 0;
    }

    /* Hero Section */
    .blog-hero {
        max-width: 1200px;
        margin: 0 auto;
        padding: 160px 64px 80px;
    }

    .blog-hero h1 {
        font-family: 'Syne', sans-serif;
        font-size: 64px;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: #1a1a1a;
        margin-bottom: 20px;
    }

    .blog-hero p {
        font-size: 20px;
        color: #6b7280;
        line-height: 1.7;
        max-width: 600px;
    }

    /* Filter Tabs */
    .blog-filters {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 64px 40px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 10px 20px;
        background: #fff;
        border: 2px solid #e5e5e5;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        color: #6b7280;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .filter-tab:hover,
    .filter-tab.active {
        background: #2563eb;
        border-color: #2563eb;
        color: #fff;
    }

    /* Blog Grid */
    .blog-grid {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 64px 120px;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
    }

    /* Featured Post */
    .featured-post {
        grid-column: span 3;
        background: #fff;
        border: 2px solid #e5e5e5;
        border-radius: 20px;
        overflow: hidden;
        display: grid;
        grid-template-columns: 1fr 1fr;
        transition: all 0.3s;
    }

    .featured-post:hover {
        transform: translateY(-4px);
        border-color: #2563eb;
    }

    .featured-image {
        background: #fafafa;
        border-right: 2px solid #e5e5e5;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px;
    }

    .featured-icon {
        width: 120px;
        height: 120px;
        background: #2563eb;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .featured-content {
        padding: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .post-meta {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #6b7280;
    }

    .post-category {
        display: inline-block;
        padding: 6px 12px;
        background: rgba(37, 99, 235, 0.1);
        color: #2563eb;
        border-radius: 6px;
        font-weight: 600;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .post-date {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .featured-content h2 {
        font-family: 'Syne', sans-serif;
        font-size: 36px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }

    .featured-content p {
        font-size: 17px;
        color: #6b7280;
        line-height: 1.7;
        margin-bottom: 24px;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #2563eb;
        font-weight: 600;
        text-decoration: none;
        transition: gap 0.2s;
    }

    .read-more:hover {
        gap: 12px;
    }

    /* Blog Post Card */
    .blog-post {
        background: #fff;
        border: 2px solid #e5e5e5;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s;
        text-decoration: none;
        display: block;
    }

    .blog-post:hover {
        transform: translateY(-4px);
        border-color: #2563eb;
    }

    .post-image {
        height: 200px;
        background: #fafafa;
        border-bottom: 2px solid #e5e5e5;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .post-icon {
        width: 64px;
        height: 64px;
        background: #2563eb;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .post-content {
        padding: 32px;
    }

    .post-content h3 {
        font-family: 'Syne', sans-serif;
        font-size: 22px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .post-content p {
        font-size: 15px;
        color: #6b7280;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    /* Newsletter Section */
    .newsletter-section {
        max-width: 1200px;
        margin: 0 auto 120px;
        padding: 0 64px;
    }

    .newsletter-box {
        background: #2563eb;
        border-radius: 20px;
        padding: 60px;
        text-align: center;
    }

    .newsletter-box h2 {
        font-family: 'Syne', sans-serif;
        font-size: 36px;
        font-weight: 800;
        color: #fff;
        margin-bottom: 16px;
    }

    .newsletter-box p {
        font-size: 18px;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 32px;
    }

    .newsletter-form {
        display: flex;
        gap: 12px;
        max-width: 500px;
        margin: 0 auto;
    }

    .newsletter-input {
        flex: 1;
        padding: 16px 24px;
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: #fff;
        font-size: 15px;
        font-family: inherit;
    }

    .newsletter-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .newsletter-input:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.4);
        background: rgba(255, 255, 255, 0.15);
    }

    .newsletter-btn {
        padding: 16px 32px;
        background: #1a1a1a;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        font-family: inherit;
    }

    .newsletter-btn:hover {
        background: #fff;
        color: #2563eb;
    }

    /* Responsive */
    @media (max-width: 1000px) {
        .blog-hero h1 {
            font-size: 48px;
        }

        .blog-grid {
            grid-template-columns: 1fr;
        }

        .featured-post {
            grid-column: span 1;
            grid-template-columns: 1fr;
        }

        .featured-image {
            min-height: 300px;
        }
    }

    @media (max-width: 768px) {
        .blog-hero {
            padding: 120px 24px 60px;
        }

        .blog-hero h1 {
            font-size: 36px;
        }

        .blog-filters,
        .blog-grid,
        .newsletter-section {
            padding-left: 24px;
            padding-right: 24px;
        }

        .featured-content,
        .newsletter-box {
            padding: 40px 24px;
        }

        .newsletter-form {
            flex-direction: column;
        }
    }
</style>

