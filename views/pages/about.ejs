<%- include('../partials/header') %>

<style>
    /* Navbar Styles */
    #navbar {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        z-index: 10000 !important;
        background: rgba(250, 250, 250, 0.95) !important;
        backdrop-filter: blur(10px) !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08) !important;
    }

    #navbar .logo-text,
    #navbar .nav-links a,
    #navbar .nav-login {
        color: #1a1a1a !important;
    }

    #navbar .logo-frame {
        border-color: #1a1a1a !important;
    }

    #navbar .nav-cta {
        background: #1a1a1a !important;
        color: #fff !important;
    }

    body {
        background: #fff;
        padding-top: 0;
    }

    /* Hero Section - Full Width with Pattern */
    .story-hero {
        position: relative;
        padding: 180px 64px 120px;
        background: #2563eb;
        overflow: hidden;
    }

    .story-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            linear-gradient(45deg, rgba(255,255,255,0.03) 25%, transparent 25%),
            linear-gradient(-45deg, rgba(255,255,255,0.03) 25%, transparent 25%),
            linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.03) 75%),
            linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.03) 75%);
        background-size: 60px 60px;
        background-position: 0 0, 0 30px, 30px -30px, -30px 0px;
        opacity: 0.5;
    }

    .story-hero-inner {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .story-hero h1 {
        font-family: 'Syne', sans-serif;
        font-size: 72px;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: #fff;
        margin-bottom: 28px;
    }

    .story-hero p {
        font-size: 22px;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.7;
    }

    /* Story Narrative Section */
    .story-narrative {
        max-width: 800px;
        margin: 0 auto;
        padding: 120px 64px;
    }

    .story-narrative h2 {
        font-family: 'Syne', sans-serif;
        font-size: 48px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 40px;
        letter-spacing: -0.02em;
    }

    .story-narrative p {
        font-size: 20px;
        color: #4b5563;
        line-height: 1.9;
        margin-bottom: 32px;
    }

    .story-narrative p:first-of-type::first-letter {
        font-size: 72px;
        font-weight: 800;
        float: left;
        line-height: 1;
        margin: 0 12px 0 0;
        color: #2563eb;
        font-family: 'Syne', sans-serif;
    }

    /* Image + Text Alternating Sections */
    .content-section {
        padding: 100px 64px;
    }

    .content-section:nth-child(even) {
        background: #fafafa;
    }

    .content-inner {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
    }

    .content-inner.reverse {
        direction: rtl;
    }

    .content-inner.reverse > * {
        direction: ltr;
    }

    .content-visual {
        background: #2563eb;
        border-radius: 20px;
        padding: 60px;
        min-height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 24px;
    }

    .content-visual-alt {
        background: #1a1a1a;
        border-radius: 20px;
        padding: 60px;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-family: 'Syne', sans-serif;
        font-size: 48px;
        font-weight: 800;
        text-align: center;
    }

    .stat-box {
        background: rgba(255, 255, 255, 0.15);
        padding: 24px 28px;
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }

    .stat-number {
        font-family: 'Syne', sans-serif;
        font-size: 36px;
        font-weight: 800;
        color: #fff;
        margin-bottom: 8px;
    }

    .stat-label {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.85);
    }

    .content-text h3 {
        font-family: 'Syne', sans-serif;
        font-size: 36px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 24px;
        letter-spacing: -0.02em;
    }

    .content-text p {
        font-size: 18px;
        color: #6b7280;
        line-height: 1.8;
        margin-bottom: 20px;
    }

    /* Values Bento Grid */
    .values-bento {
        padding: 120px 64px;
        background: #fff;
    }

    .values-bento-inner {
        max-width: 1200px;
        margin: 0 auto;
    }

    .values-bento h2 {
        font-family: 'Syne', sans-serif;
        font-size: 48px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 60px;
        text-align: center;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 20px;
    }

    .bento-item {
        background: #fafafa;
        border: 2px solid #e5e5e5;
        border-radius: 20px;
        padding: 40px;
        transition: all 0.3s;
    }

    .bento-item:hover {
        transform: translateY(-4px);
        border-color: #2563eb;
    }

    .bento-item.large {
        grid-column: span 6;
    }

    .bento-item.medium {
        grid-column: span 4;
    }

    .bento-item.small {
        grid-column: span 3;
    }

    .bento-icon {
        width: 56px;
        height: 56px;
        background: #2563eb;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 24px;
    }

    .bento-item h4 {
        font-family: 'Syne', sans-serif;
        font-size: 20px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 12px;
    }

    .bento-item p {
        font-size: 15px;
        color: #6b7280;
        line-height: 1.7;
    }

    /* Team Section - Compact */
    .team-compact {
        padding: 100px 64px;
        background: #fafafa;
        text-align: center;
    }

    .team-compact h2 {
        font-family: 'Syne', sans-serif;
        font-size: 48px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 20px;
    }

    .team-compact p {
        font-size: 18px;
        color: #6b7280;
        margin-bottom: 60px;
    }

    .team-list {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .team-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 32px;
        background: #fff;
        border: 2px solid #e5e5e5;
        border-radius: 12px;
        transition: all 0.2s;
    }

    .team-item:hover {
        border-color: #2563eb;
    }

    .team-item-left {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .team-avatar-small {
        width: 56px;
        height: 56px;
        background: #2563eb;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Syne', sans-serif;
        font-size: 18px;
        font-weight: 700;
        color: #fff;
    }

    .team-info h4 {
        font-family: 'Syne', sans-serif;
        font-size: 18px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 4px;
    }

    .team-info p {
        font-size: 14px;
        color: #6b7280;
        margin: 0;
    }

    /* CTA Section */
    .cta-story {
        padding: 120px 64px;
        background: #1a1a1a;
        text-align: center;
        color: #fff;
    }

    .cta-story h2 {
        font-family: 'Syne', sans-serif;
        font-size: 56px;
        font-weight: 800;
        margin-bottom: 24px;
    }

    .cta-story p {
        font-size: 20px;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 40px;
    }

    .cta-btn-story {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 20px 48px;
        background: #2563eb;
        color: #fff;
        text-decoration: none;
        font-size: 17px;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.2s;
    }

    .cta-btn-story:hover {
        background: #fff;
        color: #1a1a1a;
    }

    /* Responsive */
    @media (max-width: 1000px) {
        .story-hero h1 {
            font-size: 52px;
        }

        .content-inner {
            grid-template-columns: 1fr;
            gap: 60px;
        }

        .content-inner.reverse {
            direction: ltr;
        }

        .bento-item.large,
        .bento-item.medium,
        .bento-item.small {
            grid-column: span 12;
        }
    }

    @media (max-width: 768px) {
        .story-hero {
            padding: 140px 24px 100px;
        }

        .story-hero h1 {
            font-size: 40px;
        }

        .story-narrative,
        .content-section,
        .values-bento,
        .team-compact,
        .cta-story {
            padding: 80px 24px;
        }

        .story-narrative h2 {
            font-size: 36px;
        }

        .story-narrative p {
            font-size: 18px;
        }
    }
</style>

